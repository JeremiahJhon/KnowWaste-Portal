<div class="row" id="networks-of-practice" style="background-image: url('Content/marine-debris/shutterstock_436985632.jpg'); background-repeat: no-repeat; background-size: cover; background-color: white; background-attachment: fixed;">
    <div class="col-md-12 py-5" style=" background-color: #00000099; ">
        <div class="container mb-7 text-center py-5">
            <h2 class="section-title">NETWORKS OF PRACTICE</h2>
            <div id="NetworkOfPracticeCarousel" class="carousel slide w-100 py-5" data-bs-ride="carousel" data-bs-interval="3000">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#NetworkOfPracticeCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#NetworkOfPracticeCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a class="octagon d-flex align-items-center m-auto" style="background-color: #13222c; height: 200px; width: 200px;" href="https://ikhapp.org/">
                            <img src="/Content/marine-debris/ikhapp.svg" class="m-auto w-100" alt="" />
                        </a>
                        <br />
                        <a href="https://ikhapp.org/" class="text-white text-decoration-none fs-5">
                            International Knowledge Hub Against Plastic Pollution
                        </a>
                    </div>

                    <div class="carousel-item">
                        <a class="octagon d-flex align-items-center bg-white m-auto" style="height: 200px; width: 200px;" href="https://rkcmpd-eria.org/">
                            <img src="~/Content/marine-debris/logo-rkc-mpd.png" class="m-auto w-100" alt="" />
                        </a>
                        <br />
                        <a href="https://rkcmpd-eria.org/" class="text-white text-decoration-none fs-5">
                            Regional Knowledge Centre for Marine Plastic Debris
                            RKC-MPD ERIA
                        </a>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#NetworkOfPracticeCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#NetworkOfPracticeCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $(".networks-of-practice").owlCarousel({
                items: 1,
                loop: true,
                animateOut: 'fadeOut',
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true,
            });
        });
    </script>
}