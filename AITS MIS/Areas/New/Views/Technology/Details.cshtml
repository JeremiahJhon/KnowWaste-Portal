@model ViewModels.Technology
@{
    Layout = "~/Areas/New/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb">
    <div class="container container-md container-md py-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item text-uppercase"><a href="New/MarineDebris">Marine Debris</a></li>
                <li class="breadcrumb-item text-uppercase" aria-current="page"><a href="New/Technology">Technology</a></li>
                <li class="breadcrumb-item active text-uppercase" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- 3promar Section -->
<section class="ptb-5 ">
    <div class="container container-md container-md pb-120">

        <div class="p-4 mb-4 bg-light br-8">
            <!-- <small class="text-blue text-uppercase">Code No:</small> -->
            <div class="d-flex">
                <div class="col-3 pe-3">
                    <img src="~/Documents/Technology/@Model.Thumbnail.Split(';')[0]" style="width: 100%;">
                </div>

                <div class="col-9">
                    <h3 class="mb-3">@Model.Title</h3>
                    <div class="text-muted">
                        <p class="fw-medium mb-0">Date: <span class="fw-light w-75">@Convert.ToDateTime(Model.Date).ToString("d MMMM yyyy")</span></p>
                        <p class="fw-medium">
                            Share: <span>
                                <a href="http://" target="_blank" class="text-muted"><i class="bi bi-facebook me-1"></i></a>
                                <a href="http://" target="_blank" class="text-muted"><i class="bi bi-linkedin me-1"></i></a>
                                <a href="http://" target="_blank" class="text-muted"><i class="bi bi-twitter-x me-1"></i></a>
                                <a href="http://" target="_blank" class="text-muted"><i class="bi bi-envelope-fill me-1"></i></a>
                            </span>
                        </p>
                        <div class="text-muted">@Html.Raw(Model.Description)</div>
                        <div>
                            <h5>Sources:</h5>
                            @Html.Raw(Model.Source)
                        </div>
                    </div>
                </div>
            </div>
            <!-- <hr class="text-black"> -->
        </div>

    </div>
</section>