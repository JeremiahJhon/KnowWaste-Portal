@model KnowWaste.Models.Technology

@foreach (ViewModels.Technology item in Model.TechnologyList)
{
    <div class="col-md-4 px-3">
        <a href="New/Technology/Details/@item.ID" class="text-decoration-none text-dark">
            <div class="card h-100 card-rounded s-border box-shadow m-10 hover-zoom-card">
                <img src="~/Documents/Technology/@item.Thumbnail.Split(';')[0]" class="card-img-top" alt="@item.Title" style="height: 250px; width: 100%; object-fit: cover;">
                <div class="card-body p-4">
                    <h5 class="card-title mb-0">@item.Title</h5>
                    <small>Date Created: @Convert.ToDateTime(item.Date).ToString("d MMMM yyyy")</small>
                    <p class="card-text text-truncate-3 text-muted mt-3">@Html.Raw(item.Description)</p>
                    <span class="btn btn-link px-0 mt-2">Start Reading →</span>
                </div>
            </div>
        </a>
    </div>
}