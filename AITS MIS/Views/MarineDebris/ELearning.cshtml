@{
    Layout = "~/Views/MarineDebris/Shared.cshtml";
}
@using System.Data;

@{
    DataTable elearnings = (DataTable)ViewBag.ELearning;
}
<div class="row">
    <div class="landing-dark-bg">
        <div class="tns mh-400">
            <!--begin::Slider-->
            <div data-tns="true" data-tns-loop="true" data-tns-swipe-angle="false" data-tns-speed="2000" data-tns-autoplay="true" data-tns-autoplay-timeout="6000" data-tns-controls="false" data-tns-nav="false" data-tns-items="1" data-tns-mouse-drag="true" data-tns-center="false" data-tns-dots="false">
                @foreach (DataRow row in elearnings.Rows)
                {
                    <a href="@row["Link"].ToString()" class="text-center px-0 pt-0 pt-lg-0 px-lg-0 mh-400px min-h-400px" style="background-image: url(Documents/ELearning/@row["Photo"].ToString()); background-repeat: no-repeat; background-size: cover; background-position: 50%">
                        <div class="col-md-4 h-100 min-h-400px px-20 py-20" style="background-color: #535551aa; margin-left: 50%; display: grid; align-content: center;">
                            <div class="fs-1 h-100 fw-bolder text-white mb-2">
                                @row["Title"].ToString()
                                <span class="fw-normal">@Html.Raw(row["Description"].ToString())</span>
                            </div>
                        </div>
                    </a>
                }
            </div>
            <!--end::Slider-->
        </div>
