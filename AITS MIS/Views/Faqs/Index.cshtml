
@{
    Layout = "~/Views/Shared/Shared.cshtml";
}

@using System.Data;
@{ 
    string sname = "";
}
<div class="c-layout-page">
    <div class="c-layout-breadcrumbs-1 c-bgimage c-subtitle c-fonts-uppercase c-fonts-bold c-bg-img-center" style="background-image: url(../Content/Images/misc/bg-96.jpg)">
        <div class="container">
            <div class="c-page-title c-pull-left">
                <h3 class="c-font-uppercase c-font-bold c-font-dark c-font-20 c-font-slim">FAQs</h3>

            </div>
            <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                <li>
                    <a href="#" class="c-font-dark">Knowledge Transfer</a>
                </li>
                <li class="c-font-dark">/</li>
                <li>
                    <a href="#" class="c-font-dark">FAQs</a>
                </li>

            </ul>
        </div>
    </div>

    <div class="c-content-box c-size-md ">
        <div class="container">
            <div class="row c-page-faq-2">
                <div class="col-sm-3">
                    <ul class="nav nav-tabs c-faq-tabs" data-tabs="tabs">
                        @{
                            DataTable sector = (DataTable)ViewBag.Sector;

                            foreach (DataRow row in sector.Rows)
                            {
                                if (row["id"].ToString() == "1")
                                {
                                    sname = @row["name"].ToString();
                                    <li class="active">
                                        <a href="#@sname" data-toggle="tab">@sname</a>
                                    </li>
                                }
                                else if( row["id"].ToString() != "1")
                                {
                                    sname = @row["name"].ToString();
                                    <li>
                                        <a href="#@sname" data-toggle="tab">@sname</a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
                <div class="col-sm-9">
                    <div class="tab-content">
                        @{DataTable data = (DataTable)ViewBag.Faqs;

                            foreach (DataRow srow in sector.Rows)
                            {
                                if (srow["id"].ToString() == "1")
                                {
                                    <div class="tab-pane active" id="@srow["name"].ToString()">
                                        <div class="c-content-title-1">
                                            <h3 class="c-font-uppercase c-font-bold">@srow["name"].ToString()</h3>
                                            <div class="c-line-left"></div>
                                        </div>
                                        <div class="c-content-accordion-1">
                                            <div class="panel-group" id="accordion" role="tablist">

                                                @{foreach (DataRow drow in data.Rows)
                                                    {
                                                        string heading = string.Format("heading{0}", @drow["id"].ToString());
                                                        string collapse = string.Format("collapse{0}", @drow["id"].ToString());

                                                        if (drow["sector"].ToString() == srow["name"].ToString())
                                                        {
                                                            if (drow["id"].ToString() == "1")
                                                            {
                                                                <div class="panel">
                                                                    <div class="panel-heading" role="tab" id="@heading">
                                                                        <h4 class="panel-title">
                                                                            <a class="" data-toggle="collapse" data-parent="#accordion" href="#@collapse" aria-expanded="true" aria-controls="@collapse">
                                                                                <i class="c-theme-font fa fa-check-circle-o c-theme-font"></i> @drow["questions"].ToString()
                                                                            </a>
                                                                        </h4>
                                                                    </div>
                                                                    <div id="@collapse" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="@heading">
                                                                        <div class="panel-body"> @drow["answers"].ToString() </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="panel">
                                                                    <div class="panel-heading" role="tab" id="@heading">
                                                                        <h4 class="panel-title">
                                                                            <a class="" data-toggle="collapse" data-parent="#accordion" href="#@collapse" aria-expanded="true" aria-controls="@collapse">
                                                                                <i class="c-theme-font fa fa-check-circle-o c-theme-font"></i> @drow["questions"].ToString()
                                                                            </a>
                                                                        </h4>
                                                                    </div>
                                                                    <div id="@collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@heading">
                                                                        <div class="panel-body"> @drow["answers"].ToString() </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }

                                                    }

                                                }

                                            </div>
                                        </div>
                                    </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="tab-pane" id="@srow["name"].ToString()">
                                                            <div class="c-content-title-1">
                                                                <h3 class="c-font-uppercase c-font-bold">@srow["name"].ToString()</h3>
                                                                <div class="c-line-left"></div>
                                                            </div>
                                                            <div class="c-content-accordion-1">
                                                                <div class="panel-group" id="accordion" role="tablist">

                                                                    @{foreach (DataRow crow in data.Rows)
                                                                        {
                                                                            string heading = string.Format("heading{0}", @crow["id"].ToString());
                                                                            string collapse = string.Format("collapse{0}", @crow["id"].ToString());

                                                                            if (crow["sector"].ToString() == srow["name"].ToString())
                                                                            {
                                                                                if (crow["id"].ToString() == "1")
                                                                                {
                                                                                    <div class="panel">
                                                                                        <div class="panel-heading" role="tab" id="@heading">
                                                                                            <h4 class="panel-title">
                                                                                                <a class="" data-toggle="collapse" data-parent="#accordion" href="#@collapse" aria-expanded="true" aria-controls="@collapse">
                                                                                                    <i class="c-theme-font fa fa-check-circle-o c-theme-font"></i> @crow["questions"].ToString()
                                                                                                </a>
                                                                                            </h4>
                                                                                        </div>
                                                                                        <div id="@collapse" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="@heading">
                                                                                            <div class="panel-body"> @crow["answers"].ToString() </div>
                                                                                        </div>
                                                                                    </div>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <div class="panel">
                                                                                        <div class="panel-heading" role="tab" id="@heading">
                                                                                            <h4 class="panel-title">
                                                                                                <a class="" data-toggle="collapse" data-parent="#accordion" href="#@collapse" aria-expanded="true" aria-controls="@collapse">
                                                                                                    <i class="c-theme-font fa fa-check-circle-o c-theme-font"></i> @crow["questions"].ToString()
                                                                                                </a>
                                                                                            </h4>
                                                                                        </div>
                                                                                        <div id="@collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@heading">
                                                                                            <div class="panel-body"> @crow["answers"].ToString() </div>
                                                                                        </div>
                                                                                    </div>
                                                                                }
                                                                            }

                                                                        }

                                                                    }


                                                                </div>
                                                            </div>
                                                        </div>
                                                                            }
                                                                        }
                        }


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>