@{
    Layout = "~/Views/Shared/Shared.cshtml";
}

<link href="~/Content/experts.css" rel="stylesheet" />

@using System.Data;

<div class="c-layout-page">
    <div class="c-layout-breadcrumbs-1 c-subtitle c-fonts-uppercase c-fonts-bold c-bordered c-bordered-both">
        <div class="container">
            <div class="c-page-title c-pull-left">
                <h3 class="c-font-uppercase c-font-sbold">Experts in the Fields</h3>
            </div>
            <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                <li>
                    <a href="#">Knowledge Exchange</a>
                </li>
                <li>/</li>
                <li>
                    <a href="../Experts">Experts</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="c-margin-t-20"></div>
    <div class="container">

        <div class="c-content-team-1-slider" data-slider="owl" data-items="3">
            <div class="c-content-title-1">
                <h3 class="c-center c-font-uppercase c-font-bold">Experts in the Fields</h3>
                <div class="c-line-center c-theme-bg"></div>
            </div>

            <div class="row">

                @{

                    DataTable data = (DataTable)ViewBag.Rosters;

                    foreach (DataRow row in data.Rows)
                    {
                        <div class="row">
                            <div class="col-md-2">
                                <div class="image-center c-caption c-content-overlay">
                                    <div class="c-overlay-wrapper">
                                        <div class="c-overlay-content">
                                            <a href="#">
                                                <i class="icon-link"></i>
                                            </a>

                                            @{
                                                if (row["Thumbnail"].ToString() == "")
                                                {
                                                    <a href="../Documents/anonymous.jpg" data-lightbox="fancybox" data-fancybox-group="gallery-4">
                                                        <i class="icon-magnifier"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="../Documents/@row["Thumbnail"].ToString()" data-lightbox="fancybox" data-fancybox-group="gallery-4">
                                                        <i class="icon-magnifier"></i>
                                                    </a>
                                                }
                                                                    }
                                        </div>
                                    </div>
                                                            @{
                                                if (row["Thumbnail"].ToString() == "")
                                                {
                                                    <img class="image-circle c-overlay-object img-responsive" src="../Documents/anonymous.jpg" alt="">
                                                }
                                                else
                                                {
                                                    <img class="image-circle c-overlay-object img-responsive" src="../Documents/@row["Thumbnail"].ToString()" alt="">
                                                }
                                            }
                                </div>
                            </div>
                            <div class="experts col-md-10" id="@row["id"].ToString()">
                                <div class="c-body" style="height:auto;">
                                    <div class="c-head">
                                        <div class="c-name c-font-uppercase c-font-bold">@row["firstname"].ToString() @row["lastname"].ToString()</div>                                        
                                    </div>
                                    <div class="c-position"> @row["position"].ToString() </div>
                                    <div class="c-description">@Html.Raw(row["Expertise"].ToString())</div>
                                    <div class="c-margin-b-40"></div>
                                </div>
                            </div>
                        </div>                        
                    }
                }

            </div>

        </div>
    </div>

</div>
