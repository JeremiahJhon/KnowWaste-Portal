
@{
    Layout = "~/Views/Shared/Shared.cshtml";
}

<link href="~/Content/thematic.css" rel="stylesheet" />
<link href="~/Content/forum.css" rel="stylesheet" />

<div class="c-layout-page">
    <div class="c-layout-breadcrumbs-1 c-fonts-uppercase c-fonts-bold c-bordered c-bordered-both">
        <div class="container">
            <div class="c-page-title c-pull-left">
                <h3 class="c-font-uppercase c-font-sbold">Forums</h3>
            </div>
            <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                <li>
                    <a href="#">Knowledge Exchange</a>
                </li>
                <li>/</li>               
                <li class="c-state_active">Forums</li>
            </ul>
        </div>
    </div>
    
    <div class="container">
        <div class="c-layout-sidebar-menu c-theme">
            <div class="panel panel-default">
                <div class="panel-heading c-title c-font-uppercase c-font-bold">Thematic Areas</div>
                <div class="panel-body">
                    <ul class="c-shop-filter-search-1 list-unstyled">
                        @Html.Raw(ViewBag.Thematicmenu)
                    </ul>
                </div>
            </div>
        </div>
        <div class="c-layout-sidebar-content ">
            @Html.Raw(ViewBag.Forums)
        </div>
    </div>
</div>